{
  "name": "wavematch",
  "license": "MIT",
  "version": "0.4.0",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "yarn prebuild:types && NODE_ENV=development mocha --no-colors",
    "prebuild:types": "flow-remove-types src/ -d lib/",
    "build:cjs": "cross-env NODE_ENV=cjs rollup -c -o lib/wavematch.js",
    "build": "yarn prebuild:types && yarn build:cjs",
    "flow start": "flow start",
    "flow stop": "flow stop",
    "flow status": "flow status"
  },
  "repository": "git@github.com:chrisisler/wavematch.git",
  "author": "chrisisler <christopherisler1@gmail.com>",
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.66.0",
    "flow-remove-types": "^1.2.3",
    "json5": "^0.5.1",
    "lodash.isequal": "^4.5.0",
    "mocha": "^5.0.4",
    "parse-function": "5.2.3",
    "prettier": "1.11.1",
    "rollup": "^0.58.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "eslintConfig": {
    "parser": "flow",
    "extends": [
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
