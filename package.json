{
  "name": "wavematch",
  "license": "MIT",
  "description": "JS Pattern Matching",
  "version": "1.0.5",
  "main": "lib/wavematch.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "lint": "eslint src test",
    "clean": "rimraf build lib dist yarn-error.log .DS_Store",
    "test": "yarn prebuild:types && yarn build:cjs && NODE_ENV=development mocha --no-colors",
    "prebuild:types": "flow-remove-types --quiet src/ --out-dir build/",
    "prebuild:format": "prettier --write \"build/*.js\"",
    "predemo": "rimraf lib && yarn prebuild:types && yarn build:cjs",
    "build:umd": "cross-env NODE_ENV=development rollup --config --file dist/wavematch.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup --config --file dist/wavematch.min.js",
    "build:cjs": "cross-env NODE_ENV=cjs rollup --silent --config --file lib/wavematch.js",
    "build": "yarn prebuild:types && yarn prebuild:format && yarn build:cjs && yarn build:umd && yarn build:umd:min",
    "prepublish": "yarn clean && yarn test && yarn build",
    "flow start": "flow start",
    "flow stop": "flow stop",
    "flow status": "flow status"
  },
  "repository": {
    "type": "git",
    "url": "https//github.com/chrisisler/wavematch.git"
  },
  "bugs": {
    "url": "https//github.com/chrisisler/wavematch/issues"
  },
  "keywords": [
    "functional",
    "pattern",
    "match",
    "wavematch",
    "rematch"
  ],
  "author": "chrisisler <christopherisler1@gmail.com> (https://github.com/chrisisler)",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.66.0",
    "flow-remove-types": "^1.2.3",
    "mocha": "^5.0.4",
    "prettier": "1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "eslintConfig": {
    "parser": "flow",
    "extends": [
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "dependencies": {
    "fast-deep-equal": "^2.0.1",
    "json5": "^1.0.1",
    "parse-function": "^5.2.9"
  }
}
