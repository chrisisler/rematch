{
  "name": "wavematch",
  "license": "MIT",
  "version": "1.0.3",
  "main": "lib/wavematch.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "test": "yarn prebuild:types && NODE_ENV=development mocha --no-colors",
    "prebuild:types": "flow-remove-types src/ -d build/",
    "prebuild:format": "prettier --write \"build/*.js\"",
    "build:umd": "cross-env NODE_ENV=development rollup -c -o dist/wavematch.js",
    "build:umd:min": "cross-env NODE_ENV=production rollup -c -o dist/wavematch.min.js",
    "build:commonjs": "cross-env NODE_ENV=cjs rollup -c -o lib/wavematch.js",
    "build": "yarn prebuild:types && yarn prebuild:format && yarn build:commonjs && yarn build:umd && yarn build:umd:min",
    "prepublish": "yarn clean && yarn test && yarn build",
    "flow start": "flow start",
    "flow stop": "flow stop",
    "flow status": "flow status"
  },
  "repository": "git@github.com:chrisisler/wavematch.git",
  "keywords": [
    "pattern",
    "match",
    "wavematch"
  ],
  "author": "chrisisler <christopherisler1@gmail.com>",
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "^0.66.0",
    "flow-remove-types": "^1.2.3",
    "mocha": "^5.0.4",
    "prettier": "1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "eslintConfig": {
    "parser": "flow",
    "extends": [
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "dependencies": {
    "fast-deep-equal": "^1.1.0",
    "json5": "^1.0.1",
    "parse-function": "^5.2.9"
  }
}
