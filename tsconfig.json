{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src/",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./dist"],
    "paths": {
      "test/*": ["../test/*"]
    }
  },
  "include": ["src/**/*", "dist/**/*"],
  "exclude": ["node_modules/**/*"]
}
